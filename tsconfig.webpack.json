{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "noEmit": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "types": [
       "node"
    ],
    "lib": [
        "es2015",
        "dom"
    ]
  },
  "include": [
    "./tmp/app/app.module.ts",
    "main.prod.ts"
  ],
  "exclude": [
        "node_modules"
   ],
  "compileOnSave": false,
  "buildOnSave": false
}
